<Window x:Class="Hackathon2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hackathon2"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"             
        Background="#FF536093"
        mc:Ignorable="d"
        Title="MainWindow" Height="585" Width="1040" ResizeMode="CanMinimize">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="AntiqueWhite" />
            <Setter Property="FontFamily" Value="Algerian" />
        </Style>
        <Style TargetType="ListBoxItem">
            <Setter Property="Foreground" Value="AntiqueWhite" />
            <Setter Property="FontFamily" Value="Algerian" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.2*" />
            <RowDefinition Height="3.5*" />
            <RowDefinition Height="0.8*" />
        </Grid.RowDefinitions>
        <StackPanel Margin="0, 20, 0, 0" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0" Background="Navy">
            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Heavy" FontSize="40" >SUPER HEROES BATTLE</TextBlock>
        </StackPanel>
        <Button Grid.Column="1" Grid.Row="1" Background="Navy"
              Style="{StaticResource MaterialDesignFloatingActionDarkButton}"
              ToolTip="Play game">
            <materialDesign:PackIcon
                Kind="Play"
                Height="55"
                Width="55" />
        </Button>
        
        <StackPanel Grid.Column="0" Grid.Row="2" HorizontalAlignment="Center" Orientation="Horizontal">
            <Button Style="{DynamicResource MaterialDesignRaisedButton}"
                materialDesign:ShadowAssist.ShadowDepth="Depth5"
                Background="Navy" Width="100" Margin="0,0,0,0">Random</Button>
            <Button Style="{DynamicResource MaterialDesignRaisedButton}"
                materialDesign:ShadowAssist.ShadowDepth="Depth5"
                Background="Navy" Width="100" Margin="30,0,0,0">Select</Button>
        </StackPanel>

        <StackPanel Grid.Column="2" Grid.Row="2" HorizontalAlignment="Center" Orientation="Horizontal">
            <Button Style="{DynamicResource MaterialDesignRaisedButton}"
                materialDesign:ShadowAssist.ShadowDepth="Depth5"
                Background="Navy" Width="100" Margin="0,0,0,0">Random</Button>
            <Button Style="{DynamicResource MaterialDesignRaisedButton}"
                materialDesign:ShadowAssist.ShadowDepth="Depth5"
                Background="Navy" Width="100" Margin="30,0,0,0">Select</Button>
        </StackPanel>

        <ListBox x:Name="PersonList" Margin="20,0,0,0" Grid.Column="0" Grid.Row="1">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Height="120" >
                        <Image Source="{Binding image.Url}"/>
                        <TextBlock Text="{Binding name}" Margin="5,0,0,0" FontSize= "20" FontWeight="Heavy" VerticalAlignment="Center" />
                        <StackPanel Orientation="Vertical" Margin="10,0,0,0">
                            <TextBlock Margin="0,5,0,0" FontSize= "10" >
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="Intelligence: {0}">
                                        <Binding Path="powerstats.Intelligence"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                            <TextBlock Margin="0,5,0,0" FontSize= "10" >
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="Strength: {0}">
                                        <Binding Path="powerstats.Strength"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                            <TextBlock Margin="0,5,0,0" FontSize= "10" >
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="Speed: {0}">
                                        <Binding Path="powerstats.Speed"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                            <TextBlock Margin="0,5,0,0" FontSize= "10" >
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="Durability: {0}">
                                        <Binding Path="powerstats.Durability"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                            <TextBlock Margin="0,5,0,0" FontSize= "10" >
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="Power: {0}">
                                        <Binding Path="powerstats.Power"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                            <TextBlock Margin="0,5,0,0" FontSize= "10" >
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="Combat: {0}">
                                        <Binding Path="powerstats.Combat"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <ListBox x:Name="PersonList1" Margin="20,0,0,0" Grid.Column="2" Grid.Row="1">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Height="120" >
                        <Image Source="{Binding image.Url}"/>
                        <TextBlock Text="{Binding name}" Margin="5,0,0,0" FontSize= "20" FontWeight="Heavy" VerticalAlignment="Center" />
                        <StackPanel Orientation="Vertical" Margin="10,0,0,0">
                            <TextBlock Margin="0,5,0,0" FontSize= "10" >
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="Intelligence: {0}">
                                        <Binding Path="powerstats.Intelligence"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                            <TextBlock Margin="0,5,0,0" FontSize= "10" >
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="Strength: {0}">
                                        <Binding Path="powerstats.Strength"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                            <TextBlock Margin="0,5,0,0" FontSize= "10" >
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="Speed: {0}">
                                        <Binding Path="powerstats.Speed"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                            <TextBlock Margin="0,5,0,0" FontSize= "10" >
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="Durability: {0}">
                                        <Binding Path="powerstats.Durability"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                            <TextBlock Margin="0,5,0,0" FontSize= "10" >
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="Power: {0}">
                                        <Binding Path="powerstats.Power"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                            <TextBlock Margin="0,5,0,0" FontSize= "10" >
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="Combat: {0}">
                                        <Binding Path="powerstats.Combat"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>

