<UserControl x:Class="Hackathon2.FightArena"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hackathon2.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Grid>
            <Label x:Name="AQuiLeTour"/>
        </Grid>
        <Grid x:Name="JOne">
            <StackPanel>
                <Label x:Name="PV1" Height="50"></Label>
            <Button x:Name="J1P" Content="Attaque physique" Click="J1_AttPhys_Btn"/>
                <Button x:Name="J1I" Content="Attaque intellectuelle" Click="J1_AttInt_Btn"/>
            </StackPanel>
        </Grid>
        <Grid x:Name="JTwo">
            <StackPanel>
             <Label x:Name="PV2" Height="50"></Label>
                <Button x:Name="J2P"  Content="Attaque physique" Click="J2_AttPhys_Btn"/>
                <Button x:Name="J2I"  Content="Attaque intellectuelle" Click="J2_AttInt_Btn"/>
            </StackPanel>
        </Grid>
    </StackPanel>
</UserControl>
